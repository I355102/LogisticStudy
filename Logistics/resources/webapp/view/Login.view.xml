<mvc:View xmlns:core="sap.ui.core" 
			xmlns:mvc="sap.ui.core.mvc" 
			xmlns:l="sap.ui.layout"
			xmlns:f="sap.ui.layout.form"
			xmlns="sap.m" 
			controllerName="CaseStudy.Logistics.controller.Login"
			xmlns:html="http://www.w3.org/1999/xhtml"
			>
<App id="Login" 
backgroundImage="https://cdn3.vectorstock.com/i/1000x1000/11/42/delivery-seamless-background-with-gift-boxes-on-vector-3971142.jpg"
backgroundOpacity="0.3" alignContent="Center">
	
	<VBox alignItems="Center" justifyContent="Center" alignContents="Center" class="sapUiSmallMargin" >
		<f:SimpleForm id="LoginForm"
			editable="true"
			layout="ResponsiveGridLayout"
			title="Login" 
			alignItems="Center"
			
			labelSpanXL="3"
			labelSpanL="3"
			labelSpanM="3"
			labelSpanS="12"
			emptySpanXL="4"
			emptySpanL="8"
			emptySpanM="4"
			emptySpanS="0"
			columnsXL="1"
			columnsL="4"
			columnsM="1"
			singleContainerFullSize="true" 
			>
			<f:content> 
				
				<!-- UserName -->
				<Label text="UserName" />
				<Input id="username">
					<layoutData>
						<f:ColumnElementData cellsSmall="2" cellsLarge="7" />
					</layoutData>
				</Input>
				
				<!-- Password -->
				<Label text="Password" />
				<Input id="password"
						type="Password">
					<layoutData>
						<f:ColumnElementData cellsSmall="2" cellsLarge="7" />
					</layoutData>
				</Input>

				<Label />
				<Label />
				<Button text="Login"
						press="onLoginPress">
					<layoutData>
						<f:ColumnElementData cellsSmall="2" cellsLarge="7" />
					</layoutData>
				</Button>
				
			</f:content>
		</f:SimpleForm>
</VBox>
</App>
</mvc:View>